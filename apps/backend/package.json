{
  "name": "@supportdesk/backend",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "APP_ENV=development tsx watch src/server.ts",
    "dev:stage": "APP_ENV=stage tsx watch src/server.ts",
    "dev:prod": "APP_ENV=production tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start:dev": "APP_ENV=development node dist/server.js",
    "start": "APP_ENV=production node dist/server.js",
    "start:stage": "APP_ENV=stage node dist/server.js",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "prisma:generate": "APP_ENV=development prisma generate",
    "prisma:migrate": "APP_ENV=development prisma migrate dev",
    "prisma:seed": "APP_ENV=development prisma db seed"
  },
  "prisma": {
    "seed": "APP_ENV=development tsx prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.4.0",
    "@prisma/client": "^7.4.0",
    "@supportdesk/shared-types": "workspace:*",
    "cors": "^2.8.5",
    "dotenv": "^17.3.1",
    "express": "^4.21.2",
    "pg": "^8.18.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^25.2.3",
    "@types/pg": "^8.16.0",
    "prisma": "^7.4.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}
